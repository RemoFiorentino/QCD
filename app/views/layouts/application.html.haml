%html
  %head
    %title QCD-Demo
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
  %body.body_container
    = render partial: "layouts/header"
    .paper.col-xs-12.col-sm-10.col-md-10.col-sm-offset-1.col-md-offset-1 
      .row
        .col-md-6.col-md-offset-3.col-xs-10.col-xs-offset-1.col-lg-8.col-lg-offset-2
          = render partial: "layouts/messages"
      = yield
    = render partial: "layouts/fooder"